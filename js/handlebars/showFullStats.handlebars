<h2>Summary Statistics</h2>
<div class="datagrid">
    <table>
        <thead>
        <tr>
            <th colspan="3" align="center">For the Period <br>
                {{ perioddescription }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Site Visitors</td>
            <td>&nbsp;</td>
            <td align="right">{{ formatCurrency visits }}</td>
        </tr>
        <tr>
            <td>Evangelism Responses</td>
            <td>&nbsp;</td>
            <td align="right">{{ formatCurrency responses }}</td>
        </tr>

        <tr>
            <td>Salvations</td>
            <td align="right">{{ formatCurrency salvations }}</td>
            <td>&nbsp;</td>
        </tr>

        <tr>
            <td>Recommitments</td>
            <td align="right">{{  formatCurrency recommitments }}</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Questions Asked</td>
            <td align="right">{{  formatCurrency questions }}</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Prayer Needs</td>
            <td align="right">{{  formatCurrency prayerrequests }}</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Subscriptions</td>
            <td align="right">{{  formatCurrency subscriptions }}</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>Inquirers</td>
            <td>&nbsp;</td>
            <td align="right">{{ formatCurrency inquirers }}</td>
        </tr>
        </tbody>
    </table>
</div>


<div data-role="collapsible-set">
    <div data-role="collapsible" >
        <h2>Inquirer Countries</h2>

        <div class="datagrid">
            <table>
                <thead>
                <th>Country</th>
                <th>Inquirers</th>
                </thead>
                <tbody>
                {{#each inquirercountries}}
                    <tr>
                        <td>{{counter @index }}. {{ flagIconLink country~}}&nbsp;{{ country~}} </td>
                        <td align="right">{{ formatCurrency count }}</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>

        </div>
    </div>
    <div data-role="collapsible" >
        <h2>Sites the Inquires Came From</h2>

        <div class="datagrid">
            <table>
                <thead>
                <th>Website</th>
                <th>Inquirers</th>
                </thead>
                <tbody>
                {{#each inquirersites}}
                    <tr>
                        <td>{{counter @index }}. {{ hostname }}</td>
                        <td align="right">{{ formatCurrency count }}</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>

        </div>
    </div>
    <div data-role="collapsible" >
        <h2>Countries Responses Came From</h2>

        <div class="datagrid">
            <table>
                <thead>
                <th>Country</th>
                <th>Responses</th>
                </thead>
                <tbody>
                {{#each responsecountries}}
                    <tr>
                        <td>{{counter @index }}. {{ flagIconLink country~}}&nbsp;{{ country~}} </td>
                        <td align="right">{{ formatCurrency count }}</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>

        </div>
    </div>
    <div data-role="collapsible" >
        <h2>Sites the Responses Came From</h2>

        <div class="datagrid">
            <table>
                <thead>
                <th width="75%">Website</th>
                <th width="25%">Responses</th>
                </thead>
                <tbody>
                {{#each responsesites}}
                    <tr>
                        <td>{{counter @index }}. {{ellipsisShorten hostname 25 }}</td>
                        <td align="right">{{ formatCurrency count }}</td>
                    </tr>
                {{/each}}
                </tbody>

            </table>

        </div>
    </div>
</div>