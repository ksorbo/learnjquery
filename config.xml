<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.network211.reporter"
        versionCode = "3"
        versionName = "0.9.27"
        version     = "0.9.27"
        >
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="com.phonegap.plugins.childbrowser" version="5.0.0" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <!-- versionCode is optional and Android only -->

    <name>Network211 Reporter</name>

    <description>
        This application allows users to obtain the latest statistics and information from Network211's Project100million.
    </description>

    <author href="http://app.network211.com" email="info@network211.com">
        Keith Sorbo
    </author>

    <feature name="http://api.phonegap.com/1.0/network" />

    <content src="index.html"/>
    <access origin="*"/>

    <preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="default" />
    <icon src="icon.png" width="600" height="383" />
    <icon src="icons/ldpi.png" gap:platform="android" gap:qualifier="ldpi" />
    <icon src="icons/mdpi.png" gap:platform="android" gap:qualifier="mdpi" />
    <icon src="icons/hdpi.png" gap:platform="android" gap:qualifier="hdpi" />
    <icon src="icons/xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    <icon src="icons/xxhdpi.png" gap:platform="android" gap:qualifier="xxhdpi" />
    <icon src="icons/xxxhdpi.png" gap:platform="android" gap:qualifier="xxxhdpi" />

    <icon src="icons/icon-60@3x.png" gap:platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icons/icon-60.png" gap:platform="ios" width="60" height="60" />
    <icon src="icons/icon-60@2x.png" gap:platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icons/icon-76.png" gap:platform="ios" width="76" height="76" />
    <icon src="icons/icon-76@2x.png" gap:platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icons/icon-small.png" gap:platform="ios" width="29" height="29" />
    <icon src="icons/icon-small@2x.png" gap:platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="icons/icon-40.png" gap:platform="ios" width="40" height="40" />
    <icon src="icons/icon-40@2x.png" gap:platform="ios" width="80" height="80" />

    <icon src="icons/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="icons/icon@2x.png" gap:platform="ios" width="114" height="114" />

    <!-- iPad -->
    <icon src="icons/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="icons/icon-72@2x.png" gap:platform="ios" width="144" height="144" />

    <gap:splash src="splash.png" />
    <gap:splash src="splash/ios/N211Reporter320x480.png" gap:platform="ios" width="320" height="480" />

    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
        <splash src="splash/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="splash/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="splash/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="splash/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="splash/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="splash/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="splash/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="splash/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="splash/ios/Default-736h.png" width="1242" height="2208"/>
        <splash src="splash/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
    
</widget>